<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.login">

   <resultMap type="MemberVO" id="memberMap">
      <result column="user_type" property="userType"/>
      <result column="register_date" property="registerDate"/>
   
   </resultMap>

	<insert id="joinMember" parameterType="memberVO">
		insert into D_member(email, name, password)
		values(#{email}, #{name}, #{password})
	</insert>
	
	<select id="loginMember" parameterType="memberVO" resultMap="memberMap">
		select *
		from D_member
		where email = #{email} and password = #{password}
	</select>
	
	<select id="duplCheck" parameterType="string" resultMap="memberMap">
		select *
		from d_member
		where email = #{email}
	</select>
	
</mapper>