<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mlec.diary">

	<resultMap type="DiaryVO" id="diaryMap">
		<result column="is_share" property="is_share"/>
		<result column="cover_image" property="cover_image"/>
		<result column="end_date" property="end_date"/>
		<result column="start_date" property="start_date"/>
		<result column="tag_1" property="tag1"/>
		<result column="tag_2" property="tag2"/>
		<result column="tag_3" property="tag3"/>
		<result column="tag_4" property="tag4"/>
		<result column="tag_5" property="tag5"/>
		<result column="view_cnt" property="viewCnt"/>
		<result column="like_cnt" property="likeCnt"/>
		<result column="register_date" property="registerDate"/>
	</resultMap>
	
	<select id="selectDiary" resultType="diaryVO" parameterType="int">
		select no, title, content, writer, cover_image, is_share, end_date, start_date,
		tag_1, tag_2, tag_3, tag_4, tag_5, view_cnt, like_cnt, register_date
		from D_diary
		where no = #{no}
	</select>

	<select id="selectAllDiary" resultMap="diaryMap">
		select *
		from D_diary
	</select>
	

	<insert id="insertDiary" parameterType="DiaryVO"
	>
		insert into d_diary(no, title, content, writer, end_date, start_date, cover_image, is_share)
		values(d_diary_seq.nextval, #{title}, #{content}, #{writer}, #{end_date}, #{start_date}, #{cover_image}, #{is_share} )
		<selectKey keyProperty="no" resultType="Integer" order="AFTER"> SELECT d_diary_seq.currval FROM dual </selectKey>
	</insert>

</mapper>